    display: in-line;
  }
  .video-column video {
    width: 100%;
    height: auto;
  }
  .reset-button-container {
    text-align: center;
    margin-top: 20px;
  }
  .reset-button {
    font-family: 'Oswald', sans-serif;
    background-color: #000;
    color: white;
    text-shadow:
      -1px -1px 0 #000,
      1px -1px 0 #000,
      -1px 1px 0 #000,
      1px 1px 0 #000;
    border: none;
    padding: 10px 20px;
    cursor: pointer;
    font-size: 0.7em;
    border-radius: 5px;
    transition: background-color 0.3s ease;
  }
  .reset-button:hover {
    background-color: #7e49b7;
  }
  .video-label {
    font-family: 'Oswald', sans-serif;
