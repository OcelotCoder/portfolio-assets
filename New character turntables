<style>
  @import url('https://fonts.googleapis.com/css2?family=Oswald:wght@400;700&display=swap');

  body {
    background-color: white;
  }

  .video-container {
    display: flex;
    justify-content: space-around;
    align-items: flex-start;
    flex-wrap: nowrap;
    gap: 20px;
  }

  .video-column {
    flex: 1 1 30%;
    max-width: 30%;
    min-width: 300px;
    display: inline;
    position: relative;
    cursor: pointer;
    overflow: hidden;
  }

  .video-column:hover .enlarge-icon {
    opacity: 1;
  }

  .video-column video {
    width: 100%;
    height: auto;
  }

  .video-label {
    font-family: 'Oswald', sans-serif;
    font-size: 12px;
    color: black;
    text-align: center;
    margin-top: 10px;
    text-transform: uppercase;
  }

  .enlarge-icon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 3em;
    color: white;
    background-color: rgba(0, 0, 0, 0.5);
    border-radius: 50%;
    padding: 10px;
    opacity: 0;
    transition: opacity 0.3s ease;
    cursor: pointer;
    z-index: 10;
  }

  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.75);
    backdrop-filter: blur(10px);
    display: none;
    justify-content: center;
    align-items: center;
    z-index: 1000;
  }

  .modal-content {
    background-color: #fff;
    padding: 20px;
    border-radius: 10px;
    max-width: 80%;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
    text-align: center;
  }

  .modal-content video {
    width: 100%;
    height: auto;
    max-width: 800px;
  }

  .modal-description {
    font-family: 'Oswald', sans-serif;
    margin-top: 20px;
    font-size: 1em;
    color: #333;
    line-height: 1.5;
  }
</style>

<div class="video-container">
  <div class="video-column">
    <video id="gecko" autoplay muted loop playsinline></video>
    <div class="video-label">Leaf-tail gecko</div>
    <div class="enlarge-icon">üîç</div>
  </div>
  <div class="video-column">
    <video id="skink" autoplay muted loop playsinline></video>
    <div class="video-label">Sun-skink</div>
    <div class="enlarge-icon">üîç</div>
  </div>
  <div class="video-column">
    <video id="lizard" autoplay muted loop playsinline></video>
    <div class="video-label">Horned lizard</div>
    <div class="enlarge-icon">üîç</div>
  </div>
</div>

<div class="modal-overlay" id="modalOverlay">
  <div class="modal-content">
    <video id="modalVideo" autoplay muted loop playsinline></video>
    <div class="modal-description" id="modalDescription"></div>
  </div>
</div>

<script>
  const gecko = document.getElementById('gecko');
  const skink = document.getElementById('skink');
  const lizard = document.getElementById('lizard');
  const modalOverlay = document.getElementById('modalOverlay');
  const modalVideo = document.getElementById('modalVideo');
  const modalDescription = document.getElementById('modalDescription');
  const enlargeIcons = document.querySelectorAll('.enlarge-icon');

  gecko.src = "https://raw.githubusercontent.com/OcelotCoder/portfolio-assets/main/GeckoTurntable.mp4";
  skink.src = "https://raw.githubusercontent.com/OcelotCoder/portfolio-assets/main/SkinkTurntable.mp4";
  lizard.src = "https://raw.githubusercontent.com/OcelotCoder/portfolio-assets/main/LizardTurntableNEW.mp4";
  
  const descriptions = {
    gecko: "The leaf-tail gecko faces threats from extensive habitat destruction due to logging, land clearing for farming, and mining. Poaching for the illegal pet trade also poses a significant risk to this species.",
    skink: "Sun-skinks are vulnerable to habitat loss from land clearing and urban development, as well as the introduction of invasive species such as cats and foxes.",
    lizard: "Horned lizards are affected by urbanisation, as this fragments their natural habitat, creating isolated populations separated by roads and buildings."
  };

  function enlargeVideo(videoId) {
    const originalVideo = document.getElementById(videoId);
    gecko.pause();
    skink.pause();
    lizard.pause();

    modalVideo.src = originalVideo.src;
    modalDescription.textContent = descriptions[videoId];
    modalOverlay.style.display = 'flex';
  }

  enlargeIcons[0].addEventListener('click', () => enlargeVideo('gecko'));
  enlargeIcons[1].addEventListener('click', () => enlargeVideo('skink'));
  enlargeIcons[2].addEventListener('click', () => enlargeVideo('lizard'));

  modalOverlay.addEventListener('click', (event) => {
    if (event.target === modalOverlay) {
      modalOverlay.style.display = 'none';

      gecko.play();
      skink.play();
      lizard.play();
    }
  });
</script>
