<script>
  const imagesSets = [
    { images: document.getElementById('gecko-images').querySelectorAll('img'), thumbnails: document.getElementById('gecko-thumbnails'), slider: document.getElementById('gecko-slider-bar'), handle: document.getElementById('gecko-slider-handle'), fill: document.getElementById('gecko-slider-fill'), totalImages: 4 },
    { images: document.getElementById('skink-images').querySelectorAll('img'), thumbnails: document.getElementById('skink-thumbnails'), slider: document.getElementById('skink-slider-bar'), handle: document.getElementById('skink-slider-handle'), fill: document.getElementById('skink-slider-fill'), totalImages: 4 },
    { images: document.getElementById('lizard-images').querySelectorAll('img'), thumbnails: document.getElementById('lizard-thumbnails'), slider: document.getElementById('lizard-slider-bar'), handle: document.getElementById('lizard-slider-handle'), fill: document.getElementById('lizard-slider-fill'), totalImages: 4 }
  ];

  let isDraggingSlider = false;
  let activeSliderSet = null;
  let currentImageIndex = [0, 0, 0];

  function updateState(setIndex, progress) {
    const { images, thumbnails, slider, handle, fill, totalImages } = imagesSets[setIndex];
    const thumbnailElements = thumbnails.querySelectorAll('img');

    let newIndex = Math.floor(progress * totalImages);
    if (newIndex >= totalImages) {
        newIndex = totalImages - 1;
    }
    
    if (newIndex !== currentImageIndex[setIndex]) {
        images[currentImageIndex[setIndex]].classList.remove('active');
        images[newIndex].classList.add('active');
        currentImageIndex[setIndex] = newIndex;
    }

    thumbnailElements.forEach((img, i) => {
      if (i === newIndex) {
        img.classList.add('highlight');
      } else {
        img.classList.remove('highlight');
      }
    });

    const progressBarWidth = slider.offsetWidth;
    fill.style.width = (progress * 100) + '%';
    handle.style.left = (progress * progressBarWidth) + 'px';
  }

  function startSliderDrag(e, setIndex) {
    isDraggingSlider = true;
    activeSliderSet = imagesSets[setIndex];
    document.body.style.cursor = 'grabbing';
    handleSliderDrag(e);
  }

  function handleSliderDrag(e) {
    if (!isDraggingSlider || !activeSliderSet) return;
    e.preventDefault();

    const { slider } = activeSliderSet;
    const rect = slider.getBoundingClientRect();
    let clientX = e.clientX || (e.touches && e.touches[0] ? e.touches[0].clientX : null);
    if (clientX === null) return;

    let x = clientX - rect.left;
    x = Math.max(0, Math.min(x, rect.width));

    const progress = x / rect.width;
    const currentSetIndex = imagesSets.indexOf(activeSliderSet);
    updateState(currentSetIndex, progress);
  }

  function endSliderDrag() {
    isDraggingSlider = false;
    activeSliderSet = null;
    document.body.style.cursor = 'grab';
  }

  imagesSets.forEach((set, setIndex) => {
    set.thumbnails.addEventListener('click', (e) => {
      if (e.target.tagName === 'IMG') {
        const newIndex = Array.from(set.thumbnails.querySelectorAll('img')).indexOf(e.target);
        const progress = newIndex / (set.totalImages - 1);
        updateState(setIndex, progress);
      }
    });

    set.handle.addEventListener('mousedown', (e) => startSliderDrag(e, setIndex));
    set.handle.addEventListener('touchstart', (e) => startSliderDrag(e, setIndex));
  });

  document.addEventListener('mousemove', handleSliderDrag);
  document.addEventListener('mouseup', endSliderDrag);
  document.addEventListener('touchmove', handleSliderDrag);
  document.addEventListener('touchend', endSliderDrag);

  imagesSets.forEach((set, setIndex) => {
    set.images[0].classList.add('active');
    updateState(setIndex, 0);
  });
</script>
